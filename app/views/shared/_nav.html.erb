<%= content_tag :li, link_to(fa_icon('book', text: "Subjects"), sti_subject_path), class: ('active' if @type.present?) %> 

<hr>
<% if can?(:read, [Creator, Serie]) || can?(:create, Subject) %>
  <%= content_tag :li, link_to(fa_icon('outdent', text: "Edit creators"), creators_path), class: ('active' if current_page?(creators_path)) if can? :read, Creator %>
  <%= content_tag :li, link_to(fa_icon('list', text: "Edit series"), series_path), class: ('active' if current_page?(series_path)) if can? :read, Serie %>
  <%= content_tag :li, link_to(fa_icon('upload', text: "Import"), new_subject_import_path), class: ('active' if current_page?(new_subject_import_path)) if can? :create, Subject %>
  <hr>
<% end %>
