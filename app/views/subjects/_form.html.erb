<% content_for(:buttons) do %>
  <%= link_to :back, class: 'btn btn-default' do %>
    <%= fa_icon("reply") %>
    Discard
  <% end %>
  <%= link_to sti_subject_path(@type, @subject), class: 'btn btn-default' do %>
    <%= fa_icon("eye") %>
    View
  <% end unless @subject.new_record? %>
<% end %>
  
<%= simple_form_for @subject, html: { class: 'form-horizontal' },
  wrapper: :horizontal_form do |f| %>
  <% if @subject.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(subject.errors.count, "error") %> prohibited this subject from being saved:</h2>

      <ul>
      <% subject.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="col-md-12">
    <%= f.hidden_field :type, value: @type if @type != "Subject" %>
    <%= f.input :type, collection: Subject.types.map {|t| [t.humanize, t.camelcase]}, selected: @type, disabled: @type != "Subject" %> 
  </div>

  <div class="col-md-12">
    <%= f.input :creator_list, collection: Creator.order(lname: :asc), label_method: :name, value_method: :name, label: "Creators", selected: @subject.creators.map(&:name), input_html: {multiple: true, id: 'creator_names'} %>
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :published_date %>
    <%= f.input :parent_id %>
    <%= f.input :volume %>
  </div>
  
  <%= f.fields_for :parent do |g| %>
    <%= g.label :type %><br />
    <%= g.text_field :type %><br />
    <%= g.label :title %><br />
    <%= g.text_field :title %><br />
  <% end %>

  <div class="col-md-6">
    <%= f.input :publisher, collection: Publisher.order(name: :asc), label_method: :name, value_method: :name, include_blank: true, label: "Publisher", selected: @subject.publisher.try(:name), input_html: {id: 'publisher'} %>
    <%= f.input :place, collection: Place.order(name: :asc), label_method: :name, value_method: :name, include_blank: true, label: "Place", selected: @subject.place.try(:name), input_html: {id: 'place'} %>
  </div>

  <div class="col-md-6">
    <%= f.input :first_page %>
    <%= f.input :last_page %>
    <%= f.input :page_count %>
  </div>
  
  <div class="col-md-6">
    <%= f.input :abbr %>
    <%= f.input :edition %>
    <%= f.input :language %>
  </div>
  
  <div class="col-md-6">
    <div id="identifiers">
      <strong>Other Identifiers: </strong>
      <%= f.simple_fields_for :identifiers do |id| %>
        <%= render 'identifier_fields', f: id %>
      <% end %>
      <div class="links">
        <%= link_to_add_association fa_icon('plus-square', text: 'add'), f, :identifiers %>
      </div>
    </div>
  </div>

  <div class="col-md-12 actions">
    <hr>
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
