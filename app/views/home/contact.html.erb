<% title "Contact" %>

<div class="row">
  <div class="col-md-12">
	<p>If you have questions or ideas for improvements please contact us.</p>
  </div>
  
  <div class="col-md-6">

	<%= form_tag sti_subject_path, :method => 'post', class: "" do %>
    <div class="form-group">
      <%= label_tag 'Email' %>
      <div class="input-group">
        <span class="input-group-addon"><%=fa_icon('reply') %></span>
        <%= email_field_tag :email, params[:email], placeholder: "Your Email", class: "form-control", disabled: true %>
      </div>
    </div>
	  <div class="form-group">
      <%= label_tag 'message' %>
	    <%= text_area_tag :message, params[:message], rows: 10, placeholder: "Your Message", class: "form-control", disabled: true %>
	  </div>
    
    <%= button_tag 'Submit', disabled: true, class: 'btn btn-default' %>
	<% end %>
  </div>
</div>